<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 text-center">
      <h2>記事詳細</h2>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>内容</th>
            <th>画像</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <tr>
            <td><%= @article.title %></td>
            <td><%= @article.content %></td>
            <td>
              <% if @article.image? %>
                <%= image_tag @article.image.url, class: 'rounded-0', size: '100x100' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集", edit_users_article_path(@article), class: 'btn btn-success' %>
        <%= link_to "削除", users_article_path(@article), method: :delete,
        data: { confirm: "「#{@article.title}」を削除します。よろしいですか？" }, class: 'btn btn-danger' %>
      </div><br/>
      <div class="col-2 mx-auto d-grid gap-2">
        <%= link_to "記事一覧へ戻る", users_articles_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
