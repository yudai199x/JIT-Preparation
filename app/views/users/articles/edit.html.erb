<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center">記事の編集</h2>
      <%= form_with(model: @article, url: users_article_path(@article), local: true) do |f| %>
              
        <div class="field">
          <%= f.label :title %><br/>
          <%= f.text_field :title, class: "form-control" %>
        </div>
              
        <div class="field">
          <%= f.label :content %><br/>
          <%= f.text_area :content, class: "form-control" %>
        </div>
              
        <div class="field">
          <%= f.label :image %><br/>
          <%= f.file_field :image, class: "form-control" %>
        </div><br/>     
              
        <div class="actions d-grid gap-2">
          <%= f.submit '更新する', class: 'btn btn-primary' %>
        </div>
      <% end %><br/>
            
      <%= link_to "戻る", users_articles_path %>
    </div>
  </div>
</div>
